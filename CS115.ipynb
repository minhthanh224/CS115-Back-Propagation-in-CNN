    "def single_neuron(inputs):\n",
    "    \n",
    "    l = len(inputs)\n",
    "    \n",
    "    weights = np.random.rand(1,l)\n",
    "    bias    = np.random.rand(1,1)\n",
    "    out     = np.dot(weights,inputs) + bias\n",
    "    return(out)"
